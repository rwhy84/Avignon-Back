<form method="post" class="form-signin">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <h3 class="pb-3">Avignon Life</h3>
    <h1 class="h3 mb-3 font-weight-normal">Administration</h1>
    <label for="inputEmail" class="sr-only">Email address</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus placeholder="Votre email de connexion">
    <label for="inputPassword" class="sr-only">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" required placeholder="Votre de mot de passe">

          <div class="checkbox mb-3">
        <label>
          <input type="checkbox" value="remember-me"> Se rappeler de moi
        </label>
      </div>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >


    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
      <p class="mt-5 mb-3 text-muted">© 2020</p>
</form>
