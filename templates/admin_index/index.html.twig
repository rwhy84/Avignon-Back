{% extends 'base-admin.html.twig' %}

{% block dashboard %}


                <div class="container-fluid">
                    <div class="d-sm-flex justify-content-between align-items-center mb-4">
                        <h3 class="text-dark mb-0">Dashboard</h3>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-xl-3 mb-4">
                            <div class="card shadow border-left-primary py-2">
                                <div class="card-body">
                                    <div class="row align-items-center no-gutters">
                                        <div class="col mr-2">
                                            <div class="text-uppercase text-primary font-weight-bold text-xs mb-1">
                                                <span>Evenements:</span></div>
                                            <div class="text-dark font-weight-bold h5 mb-0"><span>{{ events| length }}</span></div>
                                        </div>
                                        <div class="col-auto"><i class="fas fa-calendar fa-2x text-gray-300"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-3 mb-4">
                            <div class="card shadow border-left-success py-2">
                                <div class="card-body">
                                    <div class="row align-items-center no-gutters">
                                        <div class="col mr-2">
                                            <div class="text-uppercase text-success font-weight-bold text-xs mb-1">
                                                <span>Etablissements:</span></div>
                                            <div class="text-dark font-weight-bold h5 mb-0"><span>{{ etablissements| length }}</span></div>
                                        </div>
                                        <div class="col-auto"><i class="fas fa-building fa-2x text-gray-300"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-3 mb-4">
                            <div class="card shadow border-left-warning py-2">
                                <div class="card-body">
                                    <div class="row align-items-center no-gutters">
                                        <div class="col mr-2">
                                            <div class="text-uppercase text-warning font-weight-bold text-xs mb-1">
                                                <span>Utilisateurs:</span></div>
                                            <div class="text-dark font-weight-bold h5 mb-0"><span>{{ users| length }}</span></div>
                                        </div>
                                        <div class="col-auto"><i class="fas fa-users fa-2x text-gray-300"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-3 mb-4">
                            <div class="card shadow border-left-warning py-2">
                                <div class="card-body">
                                    <div class="row align-items-center no-gutters">
                                        <div class="col mr-2">
                                            <div class="text-uppercase text-info font-weight-bold text-xs mb-1">
                                                <span>Catégories:</span></div>
                                            <div class="text-dark font-weight-bold h5 mb-0"><span>{{ categories| length }}</span></div>
                                        </div>
                                        <div class="col-auto"><i class="fas fa-bars fa-2x text-gray-300"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-lg-10 col-xl-10">
                        <h2 class="title-1 m-b-25">Les derniers evenements:</h2>
                        <div class="table-responsive table--no-card m-b-40">
<table class="table table-borderless table-striped table-earning">
<thead>
<tr>
<th>Nom</th>
<th class="text-right">Date de début</th>
<th class="text-right">Date de fin</th>
</tr>
</thead>
<tbody>


{% for event in lastEvent %}
<tr>
<td style="font-weight: bold">{{ event.name |slice(0, 20) }}</td>

{# <td>{{event.etablissement}}</td> #}

{# <td class="text-right">{{event.etablissement}}</td> #}
<td class="text-right">{{event.startEvent |date("m/d/Y")}}</td>
<td class="text-right">{{event.endEvent |date("m/d/Y")}}</td>
</tr>
    
{% endfor %}

</tbody>
</table>
</div>
                        </div>
                        <div class="col-lg-10 col-xl-10">
                            <h2 class="title-1 m-b-25">Les derniers établissements inscrit:</h2>
                        <div class="table-responsive table--no-card m-b-40">
<table class="table table-borderless table-striped table-earning">
<thead>
<tr>
<th>Nom</th>
<th>Adresse</th>
<th class="text-right">Category</th>
<th class="text-right">Latitude</th>
<th class="text-right">Longitude</th>
</tr>
</thead>
<tbody>


{% for etab in lastEtablissement %}
<tr>
<td style="font-weight: bold">{{ etab.name |slice(0, 20) }}</td>
<td>{{etab.adress}}</td>
{# <td>{{etab.category}}</td> #}

{# <td class="text-right">{{event.etablissement}}</td> #}
<td class="text-right">{{ etab.category.name |slice(0, 20) }}</td>
<td class="text-right">{{etab.lat |slice(0, 4)}}</td>
<td class="text-right">{{etab.lng |slice(0, 4)}}</td>
</tr>
    
{% endfor %}

</tbody>
</table>
                        </div>
                    </div>
                    <div class="row">
                        {% block body %}
                            
                        {% endblock %}
                    </div>
                </div>




{% endblock %}


